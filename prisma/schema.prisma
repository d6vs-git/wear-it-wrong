datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String    @id @default(cuid())
  name      String?
  email     String    @unique
  image     String?
  meetings  Meeting[]
  createdAt DateTime  @default(now())
}

model Meeting {
  id            String   @id @default(cuid())
  title         String
  startTime     DateTime
  endTime       DateTime
  googleEventId String?
  meetLink      String?
  user          User     @relation(fields: [userId], references: [id])
  userId        String
}